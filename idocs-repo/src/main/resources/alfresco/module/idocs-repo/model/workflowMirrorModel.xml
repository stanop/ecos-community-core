<?xml version="1.0" encoding="UTF-8"?>
<model name="wfm:workflowMirrorModel" xmlns="http://www.alfresco.org/model/dictionary/1.0">
	<description>Custom workflow model</description>
	<author>Citeck</author>
	<version>1.0</version>
    <imports>
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
        <import uri="http://www.alfresco.org/model/bpm/1.0" prefix="bpm"/>
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
    </imports>

    <namespaces>
        <namespace uri="http://www.citeck.ru/model/workflow-mirror/1.0" prefix="wfm"/>
    </namespaces>

    <aspects>
        <aspect name="wfm:attributes">
			<archive>false</archive>
            <properties>
                <property name="wfm:taskType">
                    <type>d:qname</type>
                </property>
                <property name="wfm:workflowId">
                    <type>d:text</type>
                </property>
                <property name="wfm:workflowName">
                    <type>d:text</type>
                </property>
                <property name="wfm:workflowInitiator">
                    <type>d:noderef</type>
					<multiple>false</multiple>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>false</tokenised>
					</index>
                </property>
				<!-- convenience calculated property to search for actors -->
				<!-- if cm:owner == null, it contains owner's nodeRef -->
				<!-- otherwise, it contains bpm:pooledActors -->
                <property name="wfm:actors">
                    <type>d:noderef</type>
					<multiple>true</multiple>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>false</tokenised>
					</index>
                </property>
                <property name="wfm:assignee">
                    <type>d:noderef</type>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>false</tokenised>
					</index>
                </property>
                <property name="wfm:document">
                    <type>d:noderef</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>false</tokenised>
                    </index>
                </property>
                <property name="wfm:documentType">
                    <type>d:qname</type>
                </property>
                <property name="wfm:documentKind">
                    <type>d:noderef</type>
                </property>
                <property name="wfm:assigneeManager">
                    <type>d:noderef</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>false</tokenised>
                    </index>
                </property>
            </properties>
            <associations>
                <association name="wfm:assigneeMirror">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>cm:authority</class>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </target>
                </association>
            </associations>
        </aspect>

        <aspect name="wfm:mirrorTasks">
            <associations>
                <association name="wfm:mirrorTask">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>bpm:workflowTask</class>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </target>
                </association>
            </associations>
        </aspect>
	</aspects>

</model>